//- Load mixins
include ../_mixins

//- Load variables
block variables
    - var title = title ? ( title + " - Website" ) : "Website";

doctype html
html
    head
        meta( charset="utf-8" )
        meta( http-equiv="X-UA-Compatible" content="IE=edge" )

        title=title

        meta( name="viewport" content="width=device-width,height=device-height,user-scalable=no,initial-scale=1.0,maximum-scale=1.0,minimum-scale=1.0" )

        link( href=config.paths.assets.css+"/all.css" rel="stylesheet" type="text/css" )

    body
        .page-layout
            header.page-layout__header
                include header

            main.page-layout__main
                block main

            footer.page-layout__footer
                include footer

            script( src=config.paths.assets.js+"/all.js" )
